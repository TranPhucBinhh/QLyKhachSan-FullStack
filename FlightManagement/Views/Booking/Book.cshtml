@model FlightManagement.Models.FlightBooking

@{
    ViewBag.Title = "Đặt Vé Máy Bay";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(model => model.DepartureCity, "Điểm khởi hành", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <p>@Model.DepartureCity</p>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.ArrivalCity, "Điểm đến", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <p>@Model.ArrivalCity</p>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.DepartureTime, "Ngày giờ khởi hành", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <p>@Model.DepartureTime.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.FlightPrice, "Giá vé", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            <p>@Model.FlightPrice.ToString("C")</p>
        </div>
    </div>

    <h3>Thông tin người dùng</h3>

    <div class="form-group row">
        @Html.LabelFor(model => model.CustomerInfo.FullName, "Họ và tên", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.CustomerInfo.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CustomerInfo.FullName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.CustomerInfo.Email, "Email", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.CustomerInfo.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CustomerInfo.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.CustomerInfo.PhoneNumber, "Số điện thoại", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.CustomerInfo.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CustomerInfo.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Đặt vé</button>
    </div>
}

@TempData["SuccessMessage"]
